import tkinter as tk
from tkinter import messagebox

class VotingSystem:
    def __init__(self):
        self.window = tk.Tk()
        self.window.title("Voting System")
        self.window.geometry("500x300")
        self.window.configure(bg="#FFFFFF")  # White background

        self.green_frame = tk.Frame(self.window, bg="#00FF00")  # Green frame
        self.green_frame.pack(fill="both", expand=True)

        self.candidates = ["Candidate A", "Candidate B", "Candidate C"]
        self.votes = {candidate: 0 for candidate in self.candidates}

        self.create_widgets()

    def create_widgets(self):
        self.label = tk.Label(self.green_frame, text="Select a candidate to vote for:", bg="#00FF00")
        self.label.pack()

        self.candidate_var = tk.StringVar()
        self.candidate_var.set(self.candidates[0])

        self.option_menu = tk.OptionMenu(self.green_frame, self.candidate_var, *self.candidates)
        self.option_menu.pack()

        self.vote_button = tk.Button(self.green_frame, text="Vote", command=self.vote)
        self.vote_button.pack()

        self.result_button = tk.Button(self.green_frame, text="View Results", command=self.view_results)
        self.result_button.pack()

    def vote(self):
        selected_candidate = self.candidate_var.get()
        self.votes[selected_candidate] += 1
        messagebox.showinfo("Vote Cast", f"Your vote for {selected_candidate} has been cast.")

    def view_results(self):
        result_string = "Voting Results:\n"
        for candidate, vote_count in self.votes.items():
            result_string += f"{candidate}: {vote_count} votes\n"
        messagebox.showinfo("Voting Results", result_string)

    def run(self):
        self.window.mainloop()

if __name__ == "__main__":
    voting_system = VotingSystem()
    voting_system.run()